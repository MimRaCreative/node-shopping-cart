<div class="row">
  <div class="col-sm-8 col-md-6 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success {{#if noMsg}}hidden{{/if}}">
      {{successMsg}}
    </div>
  </div>
</div>
{{#each products}}
<div class="row">
  {{#each this}}
  <div id="div_{{_id}}" class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="/images/shop/{{imagePath}}" alt="">
      <div class="caption">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <p class="price">${{price}}</p>
        <p>
          <a href="/add-to-cart/{{_id}}" class="btn btn-success pull-right">Add To Cart</a>
        </p>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}